{
  "manifest_version": 3,
  "name": "Oracle Media Anywhere",
  "version": "1.0",
  "description": "Oracle's tool for displaying media from anywhere on the internet.",
  "icons": {
    "16": "./assets/oracle-[16].png",
    "32": "./assets/oracle-[32].png",
    "48": "./assets/oracle-[48].png",
    "64": "./assets/oracle-[64].png",
    "128": "./assets/oracle-[128].png",
    "512": "./assets/oracle-[512].png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": [
        "ytchat-script.js"
      ],
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "./dist/popup.html"
  }
}